<div class="page-header"><h1>Upload Screenshot</h1></div>


<%= form_with model: @screenshot, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Title", class: 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control' %><br>
    <%= form.submit 'Upload', class: 'btn btn-primary' %>
  </div>
<% end %>
